<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 bg-light">
    </div>
    <div class="col-md-6">
      <h3 class="text-center"><%= @form.title%></h3>
      <hr>
      <p class="text-left"><%= @form.description%></p>
      <hr>
      <%= form_for @answered_form, url: user_answered_forms_path do |f| %>
        <%= f.hidden_field :form_id, value: @form.id %>
        <br>
        <ol class="list-group">
        <%= f.fields_for :answered_questions do |ans| %>
          <%= ans.hidden_field :question_id, value: @form.questions[ans.index].id %>
            <li class="list-group-item">
            <p><%= @form.questions[ans.index].question_text %></p>
              <% if @form.questions[ans.index].question_type == "Multiple choice" %>
                <% @form.questions[ans.index].answers.each_with_index do |answer, index| %>
                  <div class="form-group">
                    <%= ans.radio_button :user_answer, index %>
                    <%= label :user_answer, answer %>
                  </div>
                <% end %>
              <% else %>
                <div class="form-group">
                  <%= ans.text_field :user_answer, placeholder: 'Type your answer here', class:'form-control'%>
                </div>
              <% end %>
            </li>
        <% end %>
        </ol>
        <%= f.submit 'Submit answer', class: 'btn btn-success w-100'%>
      <% end %>
    </div>
    <div class='col-md-3 bg-light'>
    </div>
  </div>
</div>