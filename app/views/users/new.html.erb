<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <br>
      <h1> Sign up </h1>
      <%= form_for(@user) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control'%>
        </div>
        <%= f.submit 'Create' , class: 'btn btn-success w-100'%>
      <% end %>
    </div>
    <div class="col-md-2">
    </div>        
  </div>
</div>